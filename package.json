{
  "name": "@myparcel/ts-utils",
  "version": "1.3.1",
  "description": "TypeScript utilities",
  "keywords": [
    "typescript",
    "utility",
    "utils",
    "type-guard"
  ],
  "license": "MIT",
  "author": "Edie Lemoine <edie@myparcel.nl>",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsup src/index.ts -d lib --dts --format esm,cjs",
    "prepare": "is-ci || husky install",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@myparcel/prettier-config",
  "release": {
    "extends": "@myparcel/semantic-release-config/github-npm"
  },
  "devDependencies": {
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel/semantic-release-config": "^4.1.0",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.11",
    "@vitest/coverage-c8": "^0.25.5",
    "eslint": "^8.29.0",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.0",
    "sort-package-json": "^2.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "vitest": "^0.28.1"
  },
  "packageManager": "yarn@3.2.4",
  "publishConfig": {
    "access": "public"
  }
}
