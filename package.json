{
  "name": "@myparcel/ts-utils",
  "version": "1.0.0-alpha.2",
  "description": "TypeScript utilities",
  "keywords": [
    "typescript",
    "utility",
    "utils",
    "type-guard"
  ],
  "license": "MIT",
  "author": "Edie Lemoine <edie@myparcel.nl>",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsup src/index.ts -d lib --dts --format esm",
    "prepare": "is-ci || husky install"
  },
  "release": {
    "extends": "@myparcel/semantic-release-config/github-npm"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@myparcel/prettier-config",
  "devDependencies": {
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.0.0-alpha.1",
    "@myparcel/semantic-release-config": "^4.0.0",
    "@types/glob": "^8.0.0",
    "eslint": "^8.27.0",
    "glob": "^8.0.3",
    "husky": "^8.0.2",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "sort-package-json": "^2.1.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.4.0",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@3.2.4",
  "publishConfig": {
    "access": "public"
  }
}
